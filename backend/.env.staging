# Staging Environment Configuration
# Backend Environment Variables

# Server Configuration
NODE_ENV=staging
PORT=3000

# Database Configuration
DB_HOST=staging-db.yourdomain.com
DB_PORT=5432
DB_USERNAME=edufarm_staging
DB_PASSWORD=<staging_db_password>
DB_DATABASE=edufarm_staging

# JWT Configuration
JWT_SECRET=<staging_jwt_secret_min_32_chars>
JWT_EXPIRATION=7d

# Redis Configuration
REDIS_HOST=staging-redis.yourdomain.com
REDIS_PORT=6379
REDIS_PASSWORD=<staging_redis_password>

# File Storage
STORAGE_TYPE=local
UPLOAD_DIR=/var/www/edufarm/uploads

# MinIO (S3-compatible storage) - Optional for staging
# STORAGE_TYPE=s3
# S3_ENDPOINT=https://minio-staging.yourdomain.com
# S3_ACCESS_KEY=<staging_s3_access_key>
# S3_SECRET_KEY=<staging_s3_secret_key>
# S3_BUCKET=comment-attachments

# Rate Limiting (More relaxed in staging)
THROTTLE_TTL=60
THROTTLE_LIMIT=200

# Logging
LOG_LEVEL=debug
